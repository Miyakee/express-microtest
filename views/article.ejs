        div.link{
            width: 15%;
            float: left;
        }
        div.panel.panel-default table.table.table-striped td.overword{
    display: block;
    overflow: hidden; /*自动隐藏文字*/
    text-overflow: ellipsis;/*文字隐藏后添加省略号*/
    white-space: nowrap;/*强制不换行*/
    width: 120px;/*不允许出现半汉字截断*/
    /*color:#6699ff;border:1px #ff8000 dashed;*/
}


div.panel.panel-default table.table.table-striped td.use {
    white-space: nowrap;/*强制不换行*/

}
    </style>
</head>
<script src="javascripts/jquery.js"></script>
<script src="javascripts/bootstrap.js"></script>

<body>


<div class="head">
<div class="page-header">
    <h1>Miyakee & CCCty <small>Welcome</small></h1>
</div></div>

<div class="link">
<ul class="nav nav-pills nav-stacked">
    <li role="presentation" class="active"><a href="#">Home</a></li>
    <li role="presentation"><a href="#">Article</a></li>
    <li role="presentation"><a href="#">Picture</a></li>
    <li role="presentation"><a href="#">Comments</a></li>
    <li role="presentation"><a href="#">Comic</a></li>
    <li role="presentation"><a href="#">Collection</a></li>
    <li role="presentation"><a href="#">Visitor</a></li>

</ul></div>
<div class="main">
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="#">All article</a></li>
        <li role="presentation"><a href="#">Create New</a></li>
        <li role="presentation"><a href="#">Have deleted</a></li>
    </ul>
<div class="panel panel-default">
    <!-- Default panel conte   nts -->
    <div class="panel-heading">主人发表的文章</div>
    <div class="panel-body">
        <p>加油发文</p>
    </div>
<table class="table table-striped">
<th>id</th><th>标题</th><th>分类</th><th>内容</th><th>阅读量</th><th>点赞</th><th>修改日期</th><th>创建日期</th><th>操作</th>
    <% all.forEach(function(item){ %>
<tr><td><%= item.id %></td><td><%= item.theme %></td><td><%= item.category_id %></td><td class="overword"><%= item.content %></td><td><%= item.click %></td><td><%= item.goods %></td><td><%= item.created_at %></td><td><%= item.updated_at %></td><td class="use"><a href="/article/update/<%= item.id %>">修改</a><a href="/article/delete/<%= item.id %>"> 删除</a></td></tr>
